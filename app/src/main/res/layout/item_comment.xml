<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/comment_imageview_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="7.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/comment_textview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7.5dp"
        android:text="UserID"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/comment_imageview_profile"
        app:layout_constraintTop_toTopOf="@id/comment_imageview_profile"
        />
    <TextView
        android:id="@+id/comment_textview_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메시지"
        android:textSize="18sp"
        android:layout_margin="7.5dp"
        app:layout_constraintLeft_toRightOf="@id/comment_textview_profile"
        app:layout_constraintTop_toTopOf="@id/comment_imageview_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>